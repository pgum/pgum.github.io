source 'https://rubygems.org'

gem "jekyll", "~> 3.8.5"

group :jekyll_plugins do
  gem 'jekyll-sitemap'
  gem 'jekyll-paginate'
  gem 'jekyll-tagories'
  gem 'jekyll-spaceship'
  gem "jekyll-remote-theme"
end

gem 'webrick'

# Performance-booster for watching directories on Windows
gem "wdm", "~> 0.1.0" if Gem.win_platform?